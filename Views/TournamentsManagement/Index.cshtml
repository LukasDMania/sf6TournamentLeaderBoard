@model IEnumerable<NewLEaderboard.Models.Tournament>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Index" asp-controller="TournamentsManagement">TournamentManagement</a>
    <a asp-action="Index" asp-controller="ResultsManagement">ResultsManagement</a>
    <a asp-action="Index" asp-controller="PlayersManagement">PlayersManagement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TournamentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TournamentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TournamentVodUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TournamentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParticipantsAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentVodUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TournamentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantsAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TournamentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TournamentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TournamentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
