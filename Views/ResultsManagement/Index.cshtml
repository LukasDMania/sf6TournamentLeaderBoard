@model IEnumerable<NewLEaderboard.Models.Result>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="Index" asp-controller="TournamentsManagement">TournamentManagement</a>
    <a asp-action="Index" asp-controller="ResultsManagement">ResultsManagement</a>
    <a asp-action="Index" asp-controller="PlayersManagement">PlayersManagement</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PlayerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Placing)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CharacterUsed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tournament)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Placing)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CharacterUsed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Player.PlayerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tournament.TournamentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResultId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResultId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResultId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
