@model NewLEaderboard.Models.Tournament

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Tournament</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TournamentName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TournamentName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TournamentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TournamentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TournamentVodUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TournamentVodUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChallongeUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChallongeUrl)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParticipantsAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParticipantsAmount)
        </dd>
        

    </dl>

        <table>
        @foreach (var item in ViewBag.participantsList)
        {
            <tr>
                <td>
                    @item.Placing
                </td>
                <td>
                    @item.Player.UserName
                </td>
                <td>
                    @item.CharacterUsed
                </td>           
            </tr>
        }
        </table>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TournamentId">Edit</a> |
    <a asp-controller="Players" asp-action="Index">Back to List</a>
</div>
